{
  "id": "world.mystika.prompt.v2",
  "name": "Mystika",
  "version": "2.1.0",

  "rules": {
    "magic_is_ambient": true,
    "magic_usage": [
      "Many mundane actions are quietly magic-aided (wards, charms, rituals).",
      "Describe magic subtly unless the scene tags call it out."
    ],
    "linguistic_subs": {
      "intel": "gleanings",
      "kilometer": "league",
      "okay": "very well",
      "minutes": "ticks"
    }
  },

  "mechanics": {
    "magic_context_tags": [
      "warded_tools","whisperwork","spirit_attunement","ritual_trace"
    ],
    "magic_bias": {
      "when_present": {
        "lore": "+1 tier if topic involves essence or wards",
        "stealth": "+1 tier if 'whisperwork' present",
        "notice": "-1 tier against 'ritual_trace' concealment"
      }
    },
    "check_mods": [
      { "tag": "rescue",          "dc_delta": "+1" },
      { "tag": "approach_safely", "dc_delta": "band+weather" },
      { "tag": "travel_fast",     "dc_delta": "+1 if band in ['evening_to_midnight','midnight_to_dawn'] or heavy rain" }
    ],
    "environment_mods": {
      "rain": { "stealth": "+1 tier", "combat.ranged": "-1 tier" },
      "wind": { "combat.ranged": "-1 tier", "notice": "-1 tier" },
      "fog":  { "stealth": "+1 tier", "notice": "-1 tier" },
      "dark": { "stealth": "+1 tier", "notice": "-1 tier" }
    }
  },

  "timeworld": {
    "band_notes": {
      "dawn_to_noon": "Foraging and quiet travel favored.",
      "noon_to_evening": "Heat fatigue risk in open areas.",
      "evening_to_midnight": "Guard rotations; stealth opportunities rise.",
      "midnight_to_dawn": "Long sightlines worsen; ambush risk rises."
    }
  },

  "npc_trait_packs": [
    { "id": "shifter_guarded", "traits": ["protective","wary","decisive"] },
    { "id": "warden_ordered",  "traits": ["dutiful","pragmatic"] }
  ],
  "npc_goal_packs": [
    { "id": "glade_defense_short", "short_term": ["keep watch","remove threats quietly"] },
    { "id": "glade_defense_long",  "long_term":  ["free the glade","secure den sites"] },
    { "id": "order_keep",          "short_term": ["hold perimeter","protect civilians"], "long_term": ["restore order","stabilize routes"] }
  ],
  "npc_bias_presets": [
    { "id": "trusty",   "listen_bias": { "trust_weight": 0.6, "respect_weight": 0.4, "stubbornness": 1 } },
    { "id": "rigid",    "listen_bias": { "trust_weight": 0.4, "respect_weight": 0.6, "stubbornness": 2 } }
  ],

  "factions": [
    { "id": "wardens", "stance_default": "ally|wary", "notes": "Local order keepers with limited numbers." },
    { "id": "slavers", "stance_default": "hostile",   "notes": "Operate from a hardened camp across the ravine." }
  ],
  "faction_rules": {
    "pressure": {
      "about": "World-level encounter pressure that shifts patrol odds and event tempo.",
      "increments": [
        "PC disrupts slaver camp (minor) => +1",
        "PC eliminates patrol quietly => +0 (no alarm)",
        "Alarm raised or captive escapes reported => +2"
      ],
      "decrements": [
        "PC takes down major site (supply hub) => -2",
        "PC completes 'cut supply lines' objective => -1"
      ],
      "effects": [
        "pressure >= 3 => patrol encounter odds increase by one step",
        "pressure <= 0 => patrol encounter odds decrease by one step"
      ]
    }
  },

  "lore_index": {
    "include_policy": {
      "by_tags": "Only include entries whose tags intersect the current scene tags or player query intent.",
      "max_entries": 3,
      "entry_size": "≤120 chars each"
    },
    "entries": [
      { "id": "essence_axes", "tags": ["essence","magic"], "text": "Essence flows along Life, Death, Order, Chaos—each colors magic differently." },
      { "id": "crystal_wells", "tags": ["magic","place"],   "text": "Crystal wells thin the veil; workings there are potent but unstable." },
      { "id": "shifters",      "tags": ["species"],         "text": "Shifters bind will to flesh; vows and packs shape their control." },
      { "id": "wardens",       "tags": ["faction"],         "text": "Wardens guard roads and groves, wary of magic but reliant on it." }
    ]
  },

  "tone": {
    "style": ["grounded high fantasy", "sensory woods imagery", "kinship under pressure"],
    "taboos": ["modern slang", "explicit tech jargon"]
  }
}

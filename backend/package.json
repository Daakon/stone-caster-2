{
  "name": "backend",
  "version": "1.0.0",
  "description": "Stonecaster backend API server",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:local": "node scripts/dev-with-default-env.js",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:local": "node scripts/dev-with-default-env.js",
    "test": "vitest run --passWithNoTests",
    "test:ci": "vitest run --coverage --passWithNoTests",
    "type-check": "tsc --noEmit",
    "lint": "eslint \"src/**/*.{ts,tsx,js}\"",
    "setup:config": "node scripts/setup-config.js",
    "verify:config": "node scripts/verify-config.js",
    "create:env-template": "node scripts/create-env-template.js",
    "setup:env": "npm run create:env-template",
    "test:env-setup": "npm run build && node scripts/test-env-setup.js"
  },
  "keywords": [
    "rpg",
    "api",
    "express"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@supabase/supabase-js": "^2.38.0",
    "@types/crypto-js": "^4.2.2",
    "@types/uuid": "^10.0.0",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-fetch": "^3.3.2",
    "openai": "^4.20.0",
    "uuid": "^13.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "supertest": "^6.3.3",
    "tsx": "^4.7.0",
    "typescript": "^5.3.2",
    "vitest": "^1.0.4"
  }
}

{
  "name": "@stone-caster/author-cli",
  "version": "1.0.0",
  "description": "CLI tool for importing and exporting authoring assets",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "author": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --outDir dist",
    "dev": "tsx watch src/index.ts",
    "test": "vitest run",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "yargs": "^17.7.2",
    "jszip": "^3.10.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/yargs": "^17.0.32",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.2",
    "vitest": "^1.2.0"
  }
}


{
  "name": "stone-caster-2",
  "version": "1.0.0",
  "description": "AI-driven role-playing game platform with React/Vite frontend, Node/Express API, and Supabase backend",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "scripts": {
    "dev": "npm run dev:server & npm run dev:client",
    "dev:client": "npm run dev --workspace=frontend",
    "dev:server": "npm run dev:server:local",
    "dev:server:local": "npm run dev:local --workspace=backend",
    "dev:server:prod": "npm run dev --workspace=backend",
    "start:client": "npm --workspace=frontend run preview",
    "start:server": "npm --workspace=backend run start",
    "start:server:local": "npm run start:local --workspace=backend",
    "build": "npm run build --workspaces",
    "build:client": "npm run build --workspace=frontend",
    "build:server": "npm run build --workspace=backend",
    "test": "npm run test --workspaces",
    "test:client": "npm run test --workspace=frontend",
    "test:server": "npm run test --workspace=backend",
    "test:ci": "npm run test:ci --workspace=frontend && npm run test:ci --workspace=backend",
    "test:e2e": "npm run test:e2e --workspace=frontend",
    "test:e2e:ci": "npm run test:e2e:ci --workspace=frontend",
    "lint": "npm run lint --workspaces",
    "lint:client": "npm run lint --workspace=frontend",
    "lint:server": "npm run lint --workspace=backend",
    "type-check": "npm run type-check --workspaces",
    "type-check:client": "npm run type-check --workspace=frontend",
    "type-check:server": "npm run type-check --workspace=backend",
    "dev:setup": "node scripts/dev-setup.js",
    "setup": "npm run setup:env && npm run setup:config",
    "setup:env": "npm run setup:env --workspace=backend",
    "setup:config": "npm run setup:config --workspace=backend",
    "verify:config": "npm run verify:config --workspace=backend",
    "test:env-setup": "npm run test:env-setup --workspace=backend",
    "deploy": "npm run deploy --workspace=backend"
  },
  "keywords": [
    "rpg",
    "ai",
    "storytelling",
    "game"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.2"
  }
}
